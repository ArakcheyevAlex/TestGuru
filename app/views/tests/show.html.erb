<p>
  <strong>Title:</strong>
  <%= @test.title %>
</p>

<p>
  <strong>Level:</strong>
  <%= @test.level %>
</p>

<p>
  <strong>Category:</strong>
  <%= @test.category.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @test.author.name %>
</p>

<h2>Test's questions</h2>
  <table>
    <thead>
    <tr>
      <th>Body</th>
      <th colspan = 2>Actions</th>
    </tr>
    <tbody>
      <% @test.questions.each do |question| %>
        <tr>
          <td><%= question.body %></td>
          <td><%= link_to 'Show', question %></td>
          <td><%= link_to 'Delete',
                          question,
                          method: :delete,
                          data: { confirm: 'Sure to delete question?' }
          %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
